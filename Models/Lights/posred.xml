<?xml version="1.0"?>
<PropertyList>

<model>
 <name>RedLight</name>
 <path>Aircraft/generic/spotlight.xml</path>
 <offsets>
 <x-m>-3.1</x-m>
 <y-m>-4.5</y-m>
 <z-m>-0.8</z-m>
 </offsets>
 <overlay>
  <params>
   <name>RedLight</name>
   <power-source>controls/lighting/nav-lights</power-source>
   <direction>
    <x>0.5</x>
    <y>0.5</y>
    <z>0.0</z>
   </direction> 
   <ambient>
    <r>1.0</r>
    <g>0</g>
    <b>0</b>
   </ambient>
   <specular>
    <r>1.0</r>
    <g>0.7</g>
    <b>0.5</b>
   </specular> 
  </params>
 </overlay>
</model> 

 <animation>
  <name>RedLight</name>
  <type>scale</type>
  <x-offset>1.5</x-offset>
  <y-offset>1.5</y-offset>
  <z-offset>1.5</z-offset>
  <center>
<x-m>-3.1</x-m>
<y-m>-4.5</y-m>
<z-m>-0.8</z-m>
  </center>
 </animation> 

 <!--animation-->
  <name>RedLight</name>
   <type>rotate</type>
	 
	 <axis>
		 <x>-1.0</x>
		 <y> 0.0</y>
		 <z> 0.0</z>
	 </axis>
	 <center>
		 <x-m>3.0</x-m>
		 <y-m>0.0</y-m>
		 <z-m>0.0</z-m>
         </center>
	 <condition>
		 <and>
			 <equals>
				 <property>rotors/main/blade[0]/position-deg</property>
				 <value>1.0</value>
			 </equals>
			 <equals>
				 <property>controls/lighting/nav-lights</property>
				 <value>1.0</value>
			 </equals>
		 </and>
	 </condition>
  <!--/animation-->


</PropertyList>
